<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.News" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/textColorPrimary</item>
        <item name="colorPrimaryVariant">@color/teal_1000</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <color name="android:statusBarColor">@color/statusBarColor</color>
        <color name="android:windowBackground">@color/windowBackground</color>
        <color name="android:navigationBarColor">@color/navigationBarColor</color>
    </style>
    <!-- The toolbar. -->
    <style name="Theme.News.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <color name="android:Background">@color/toolbarBackground</color>
        <color name="titleTextColor">@color/toolbarTitleTextColor</color>
        <color name="subtitleTextColor">@color/toolbarSubtitleTextColor</color>
        <color name="colorControlNormal">@color/windowBackground</color>
        <color name="android:colorControlNormal">@color/windowBackground</color>
        <color name="android:editTextColor">@color/white</color>
        <color name="android:textColorHint">@color/windowBackground</color>
    </style>
</resources>